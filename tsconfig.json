{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs",                                 
    "moduleResolution": "node",
    "outDir": "./dist/",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "noImplicitAny": false,                            
    "skipLibCheck": true                                
  }
}
